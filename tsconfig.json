{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },

  "include": [
    "src/**/*.ts",
    "prisma.config.ts" // Include prisma.config.ts
  ],
  "exclude": [
    "node_modules"
  ]
}